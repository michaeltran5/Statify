<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="@color/spotify_green" />

            <TextView
                android:id="@+id/userEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/spotify_green" />

            <TextView
                android:id="@+id/listeningTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/spotify_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/top_artists_header"
                android:textStyle="bold"
                android:textColor="@color/spotify_green"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/artistCarouselViewPager"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clipToPadding="false"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/top_tracks_header"
                android:textStyle="bold"
                android:textColor="@color/spotify_green"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/topTracksText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-condensed-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/top_genres_header"
                android:textStyle="bold"
                android:textColor="@color/spotify_green"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/topGenresText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-condensed-medium" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>